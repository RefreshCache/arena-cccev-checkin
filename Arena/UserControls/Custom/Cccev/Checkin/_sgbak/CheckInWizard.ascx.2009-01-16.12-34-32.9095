		                </ItemTemplate>
	                </asp:DataList>
                </div>

                <div class="footer">
                    <div class="footerLeft">
                        <asp:Button ID="btnAbilityCancel" runat="server" Text="Cancel" CssClass="cancelButton" onclick="Cancel_Click" />
                    </div>
                </div>
